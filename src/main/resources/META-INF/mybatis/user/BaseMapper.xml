<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.story.mapper.user.UserMapper">
    <resultMap type="com.story.pojo.po.UserPO" id="baseUserMap">
        <result column="user_uid" property="userUid"/>
        <result column="user_name" property="userName"/>
        <result column="archive" property="archive"/>
    </resultMap>
    <select id="listUserInfos" resultMap="baseUserMap">
		select user_uid,user_name,archive
		FROM ll_user
		WHERE archive = 1
	</select>

    <update id="resetArchive">
        update ll_user
        set archive = 1
    </update>

    <update id="updateUserArchive">
        update ll_user
        set archive = 0
        where user_uid = #{userUid}
    </update>

</mapper>